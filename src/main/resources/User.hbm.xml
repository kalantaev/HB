<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="entity">
    <class name="User" table="user2">
        <id name="userId" column="user_id">
            <generator class="native"/>
        </id>
        <property name="login" column="login"/>
        <property name="password" column="password"/>
        <property name="dateReg" column="dateReg"/>
        <property name="dateLastVisit" column="dateLastVizit"/>
        <bag name="commentariyList" inverse="true" cascade="all-delete-orphan">
            <key column="user_id"></key>
            <one-to-many class="entity.Commentariy"/>
        </bag>
        <set name="contentList" table="content_user" lazy="false">
            <key column="user_id"></key>
            <many-to-many column="content_id" class="entity.Content"/>
        </set>
    </class>
</hibernate-mapping>