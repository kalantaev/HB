<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="entity">
    <class name="Content" table="content">
        <id name="contentId" column="content_id">
            <generator class="native"/>
        </id>
        <property name="title" column="title"/>
        <property name="contentDescription" column="description"/>

        <set name="listContentAutor" table="content_user" lazy="false">
            <key column="content_id"></key>
            <many-to-many column="user_id" class="entity.User"/>
        </set>
        <bag name="commentariyList" inverse="true" cascade="all-delete-orphan">
            <key column="content_id"></key>
            <one-to-many class="entity.Commentariy"/>

        </bag>
    </class>
</hibernate-mapping>